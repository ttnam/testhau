<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical">

    <include layout="@layout/layout_trip_detail_tool_bar" />

    <include layout="@layout/layout_separate_vertical" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@id/image_view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height_v2"
                    android:scaleType="centerCrop" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/image_edit_cover"
                    style="@style/AppTheme.IconClick"
                    android:layout_width="@dimen/icon_size_x6"
                    android:layout_height="@dimen/icon_size_x6"
                    android:layout_gravity="end|bottom"
                    android:padding="@dimen/margin"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_vector_pen_backgroud" />

            </FrameLayout>

            <TextView
                android:id="@+id/text_name"
                style="@style/AppTheme.TextView_Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:minLines="1"
                android:textSize="@dimen/text_size_v3" />

            <TextView
                android:id="@+id/text_time"
                style="@style/AppTheme.TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:gravity="center"
                android:maxLines="3"
                android:minLines="1" />


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <include layout="@layout/layout_trip_number_info" />

            </HorizontalScrollView>

            <include layout="@layout/layout_separate_vertical" />

            <include layout="@layout/item_web_vew" />

            <TextView
                android:id="@+id/text_number_of_photo"
                style="@style/AppTheme.TextView_Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/margin" />

            <include layout="@layout/layout_recycler_view" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        android:id="@id/button"
        style="@style/AppTheme.TextView_Title.Bold.White"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom"
        android:background="@drawable/ic_style_button_round_none_theme"
        android:text="@string/str_join" />
</LinearLayout>