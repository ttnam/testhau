<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/button_people"
        style="@style/CoreAppTheme.IconClick"
        android:layout_width="@dimen/icon_size_x6"
        android:layout_height="@dimen/icon_size_x6"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_vector_walk" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/button_bicycle"
        style="@style/CoreAppTheme.IconClick"
        android:layout_width="@dimen/icon_size_x6"
        android:layout_height="@dimen/icon_size_x6"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_vector_motor_bike" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/button_bus"
        style="@style/CoreAppTheme.IconClick"
        android:layout_width="@dimen/icon_size_x6"
        android:layout_height="@dimen/icon_size_x6"
        android:layout_gravity="center"
        android:layout_weight="1"
        app:srcCompat="@drawable/ic_vector_bus" />

</LinearLayout>
