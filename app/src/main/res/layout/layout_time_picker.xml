<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:baselineAligned="true"
    android:orientation="vertical"
    android:padding="@dimen/margin">

    <TextView
        style="@style/CoreAppTheme.TextView_Title.Bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:padding="@dimen/margin"
        android:text="Chọn thời gian và địa điểm" />

    <TextView
        android:id="@id/text_view"
        style="@style/CoreAppTheme.TextView_Sub_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|start"
        android:maxLines="1"
        android:padding="@dimen/margin"
        android:textColor="@android:color/holo_red_dark" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingStart="@dimen/margin"
        android:paddingTop="@dimen/margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/margin"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x2"
                android:layout_height="@dimen/icon_size_x2"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_style_circle_blue_none" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:background="@color/BlueButton" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_style_button_round_corners_dark_default"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/icon_size_x3"
                    android:layout_height="@dimen/icon_size_x3"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_vector_marker_blue" />

                <TextView
                    android:id="@+id/text_depart"
                    style="@style/CoreAppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:background="@drawable/ic_style_button_round_corners_dark_default"
                    android:clickable="true"
                    android:gravity="center|start"
                    android:hint="@string/str_depart"
                    android:textColor="@android:color/holo_blue_dark" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_depart_date"
                    style="@style/CoreAppTheme.TextView_Title.Bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_style_button_round_corners_dark_default"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/str_pick_date"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/margin"
                    android:paddingLeft="@dimen/margin_x2"
                    android:paddingRight="@dimen/margin_x2"
                    android:paddingTop="@dimen/margin"
                    android:textColor="@android:color/holo_blue_dark" />

                <TextView
                    android:id="@+id/text_depart_time"
                    style="@style/CoreAppTheme.TextView_Title.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:background="@drawable/ic_style_button_round_corners_dark_default"
                    android:clickable="true"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:hint="@string/str_pick_time"
                    android:maxLines="1"
                    android:paddingBottom="@dimen/margin"
                    android:paddingLeft="@dimen/margin_x2"
                    android:paddingRight="@dimen/margin_x2"
                    android:paddingTop="@dimen/margin"
                    android:textColor="@android:color/holo_blue_dark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/margin"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin"
        android:paddingStart="@dimen/margin"
        android:paddingTop="@dimen/margin">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin"
            android:orientation="vertical">

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/holo_red_dark" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x2"
                android:layout_height="@dimen/icon_size_x2"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_style_circle_red_none" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_style_button_round_corners_dark_default"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/icon_size_x3"
                    android:layout_height="@dimen/icon_size_x3"
                    android:layout_gravity="center"
                    android:scaleType="centerInside"
                    app:srcCompat="@drawable/ic_vector_marker_red" />

                <TextView
                    android:id="@+id/text_arrive"
                    style="@style/CoreAppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:background="@drawable/ic_style_button_round_corners_dark_default"
                    android:clickable="true"
                    android:gravity="center|start"
                    android:hint="@string/str_arrive"
                    android:textColor="@android:color/holo_red_dark" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_arrive_date"
                    style="@style/CoreAppTheme.TextView_Title.Bold"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_style_button_round_corners_dark_default"
                    android:clickable="true"
                    android:gravity="center"
                    android:hint="@string/str_pick_date"
                    android:paddingBottom="@dimen/margin"
                    android:paddingLeft="@dimen/margin_x2"
                    android:paddingRight="@dimen/margin_x2"
                    android:paddingTop="@dimen/margin"
                    android:textColor="@android:color/holo_red_dark" />

                <TextView
                    android:id="@+id/text_arrive_time"
                    style="@style/CoreAppTheme.TextView_Title.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginStart="@dimen/margin"
                    android:background="@drawable/ic_style_button_round_corners_dark_default"
                    android:clickable="true"
                    android:gravity="center"
                    android:hint="@string/str_pick_time"
                    android:paddingBottom="@dimen/margin"
                    android:paddingLeft="@dimen/margin_x2"
                    android:paddingRight="@dimen/margin_x2"
                    android:paddingTop="@dimen/margin"
                    android:textColor="@android:color/holo_red_dark" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>