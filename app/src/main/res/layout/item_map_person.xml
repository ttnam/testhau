<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="@dimen/cardCornerRadius_x5"
    app:cardElevation="@dimen/cardview_default_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/icon_size_x4"
            android:layout_height="@dimen/icon_size_x4"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_vector_avatar" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                style="@style/CoreAppTheme.TextView_Sub_Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Donald Trump" />


            <TextView
                style="@style/CoreAppTheme.TextView_Sub_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0.6 km" />

        </LinearLayout>

        <android.support.v7.widget.AppCompatImageView
            style="@style/CoreAppTheme.IconClick"
            android:layout_width="@dimen/icon_size_x3"
            android:layout_height="@dimen/icon_size_x3"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            app:srcCompat="@drawable/ic_vector_close_red" />
    </LinearLayout>
</android.support.v7.widget.CardView>