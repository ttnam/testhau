<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="?actionBarSize"
    android:baselineAligned="true"
    android:orientation="horizontal"
    android:weightSum="4">

    <FrameLayout
        android:id="@+id/layout_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ic_style_button_round_none_default"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_comment" />

            <TextView
                style="@style/CoreAppTheme.TextView_Sub_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:text="Comment" />

        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_activity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ic_style_button_round_none_default"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_diagram_line" />

            <TextView
                style="@style/CoreAppTheme.TextView_Sub_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:text="Activity" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_vehicle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ic_style_button_round_none_default"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/image_vehicle"
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                android:clickable="false"
                app:srcCompat="@drawable/ic_vector_motor_bike_dark" />

            <TextView
                android:id="@+id/text_vehicle"
                style="@style/CoreAppTheme.TextView_Sub_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:text="Motor" />
        </LinearLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/layout_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@drawable/ic_style_button_round_none_default"
        android:clickable="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_more" />

            <TextView
                style="@style/CoreAppTheme.TextView_Sub_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:text="+3 More" />
        </LinearLayout>

    </FrameLayout>

</LinearLayout>