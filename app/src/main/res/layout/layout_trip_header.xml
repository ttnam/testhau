<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.AppCompatImageView
            android:id="@id/image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height_v3"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/text_edit"
            style="@style/CoreAppTheme.TextView_Sub_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/ic_style_rect_round_corners_white_none"
            android:paddingLeft="@dimen/margin_x2"
            android:paddingRight="@dimen/margin_x2"
            android:text="@string/str_edit"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|start"
            android:background="@drawable/ic_bak_gradient_footer">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|start"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:background="@drawable/ic_style_rect_round_corners_theme_dark"
                android:orientation="horizontal"
                android:padding="@dimen/margin">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/icon_size_x2"
                    android:layout_height="@dimen/icon_size_x2"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_vector_eye" />

                <TextView
                    android:id="@+id/text_views"
                    style="@style/CoreAppTheme.TextView_Sub_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin_min"
                    android:layout_marginStart="@dimen/margin_min"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</merge>