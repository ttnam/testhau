<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    app:cardCornerRadius="3dp"
    app:cardElevation="3dp">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_height_v1">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_suggest_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="centerCrop" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="@color/transparent_40_black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_x2"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_suggest_name"
                style="@style/CoreAppTheme.TextView_Title.Bold.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <TextView
                android:id="@+id/text_suggest_description"
                style="@style/CoreAppTheme.TextView_Sub_Title.White"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="4" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="horizontal"
            android:padding="@dimen/margin_x2">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_marker" />

            <TextView
                android:id="@+id/text_suggest_distance"
                style="@style/CoreAppTheme.TextView_Sub_Title.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                app:srcCompat="@drawable/ic_vector_tag" />

            <TextView
                android:id="@+id/text_suggest_type"
                style="@style/CoreAppTheme.TextView_Sub_Title.White"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:maxLines="1" />

        </LinearLayout>

    </FrameLayout>
</android.support.v7.widget.CardView>