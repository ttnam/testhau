<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <io.yostajsc.izigo.ui.bottomsheet.OwnToolBar
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        app:layoutBackground="@color/colorPrimary"
        app:layoutTitle="@string/all_your_trip"
        app:layoutType="title_left" />

    <include layout="@layout/layout_separate_vertical" />

    <android.support.design.widget.TabLayout
        android:id="@id/tabs"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="@dimen/margin"
        android:background="@android:color/white"
        app:tabGravity="fill"
        app:tabIndicatorColor="@color/colorAccentDark"
        app:tabMode="scrollable"
        app:tabSelectedTextColor="@color/colorAccentDark" />

    <include layout="@layout/layout_recycler_view" />

</LinearLayout>