<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin"
        android:paddingLeft="@dimen/margin_x2"
        android:paddingRight="@dimen/margin_x2"
        android:paddingTop="@dimen/margin">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_transfer"
            android:layout_width="@dimen/icon_size_x5"
            android:layout_height="@dimen/icon_size_x5"
            android:layout_gravity="center"
            android:background="@drawable/ic_style_circle_white"
            android:clickable="false"
            android:padding="@dimen/margin"
            app:srcCompat="@drawable/ic_vector_motor_bike" />

        <TextView
            android:id="@+id/text_views"
            style="@style/AppTheme.TextView_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_members"
            style="@style/AppTheme.TextView_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center" />

        <TextView
            android:id="@+id/text_number_of_comment"
            style="@style/AppTheme.TextView_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true" />

        <TextView
            android:id="@+id/text_activities"
            style="@style/AppTheme.TextView_Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true" />

    </LinearLayout>
</merge>