<?xml version="1.0" encoding="utf-8"?>
<merge>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_transfer"
            android:layout_width="@dimen/icon_size_x7"
            android:layout_height="@dimen/icon_size_x7"
            android:layout_gravity="center"
            android:clickable="false"
            android:padding="@dimen/margin"
            app:srcCompat="@drawable/ic_vector_motor_bike" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_style_circle_blue_none"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x2"
                android:layout_height="@dimen/icon_size_x2"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_eye" />

            <TextView
                android:id="@+id/text_views"
                style="@style/CoreAppTheme.TextView_Sub_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_min"
                android:layout_marginStart="@dimen/margin_min"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</merge>