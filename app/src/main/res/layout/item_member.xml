<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin">

    <android.support.v7.widget.AppCompatImageView
        android:id="@id/image_view"
        android:layout_width="@dimen/icon_size_x5"
        android:layout_height="@dimen/icon_size_x5"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_profile_holder" />

    <TextView
        android:id="@id/text_view"
        style="@style/CoreAppTheme.TextView_Title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|start"
        android:padding="@dimen/margin"
        android:text="@string/all_app_name" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <Button
            android:id="@id/button"
            style="@style/CoreAppTheme.TextView_Sub_Title"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/icon_size_x4"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:background="@drawable/ic_style_button_round_corners_accent_reflector"
            android:text="@string/str_invite"
            android:textColor="@drawable/ic_style_button_text_white_accent"
            android:visibility="invisible" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/image_close"
            style="@style/CoreAppTheme.IconClick"
            android:layout_width="@dimen/icon_size_x4"
            android:layout_height="@dimen/icon_size_x4"
            android:layout_gravity="center|end"
            android:layout_marginEnd="@dimen/margin_x2"
            android:layout_marginRight="@dimen/margin_x2"
            app:srcCompat="@drawable/ic_vector_close_red" />

    </FrameLayout>

</LinearLayout>