<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="CoreAppTheme">
        <item name="android:typeface">serif</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Fullscreen" parent="CoreAppTheme.Fullscreen">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:typeface">serif</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextView_Title.ColorPrimary" parent="CoreAppTheme.TextView_Title">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.TextView_Label" parent="CoreAppTheme.TextView_Label">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/ic_style_circle_blue_none</item>
    </style>

    <style name="AppTheme.TextView_Title.Bold.ColorPrimary" parent="CoreAppTheme.TextView_Title.Bold">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="Style_MaterialSearch" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.7</item>
    </style>

    <style name="Style_Menu_Item.Press" parent="CoreAppTheme.TextView_Title.Bold">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/margin_x2</item>
        <item name="android:paddingRight">@dimen/margin_x2</item>
        <item name="android:background">@drawable/ic_style_button_round_none_default</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Style_Menu_Item.NonPress" parent="CoreAppTheme.TextView_Title.Bold">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">@dimen/margin_x2</item>
        <item name="android:paddingRight">@dimen/margin_x2</item>
        <item name="android:background">@drawable/ic_style_button_round_none_default</item>
    </style>

    <style name="AccentButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/Red</item>
        <item name="android:textColorPrimary">@color/colorTextColorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:colorBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AppTheme.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextInputEditText" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/colorPrimary</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="AppTheme.CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>