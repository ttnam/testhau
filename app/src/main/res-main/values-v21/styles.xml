<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:navigationBarColor">?android:attr/colorPrimaryDark</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="AccentButton" parent="AppTheme">
        <item name="colorButtonNormal">@color/Red</item>
        <item name="android:textColorPrimary">@color/colorTextColorPrimary</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:colorBackground">@color/colorWindowBackground</item>
        <item name="android:navigationBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AnimDialog.SlideUpDown" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_down</item>
    </style>

    <style name="AppTheme.AnimDialog.SlideLeftRight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_right</item>
    </style>

    <style name="AppTheme.AnimDialog.SlideRightLeft" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_left</item>
    </style>

    <style name="AppTheme.AnimDialog.SlideDownUp" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_up</item>
    </style>

    <style name="AppTheme.AnimDialog.Grow" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="@android:windowEnterAnimation">@anim/anim_grow_in</item>
        <item name="@android:windowExitAnimation">@anim/anim_grow_out</item>
    </style>

    <style name="AppTheme.LinearProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:progressBackgroundTint">@color/colorAccentDark</item>
    </style>

    <style name="Style_Menu_Item.Press" parent="AppTheme.TextView_Title.Bold">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:paddingLeft">@dimen/margin_x2</item>
        <item name="android:paddingRight">@dimen/margin_x2</item>
        <item name="android:paddingEnd">@dimen/margin_x2</item>
        <item name="android:paddingStart">@dimen/margin_x2</item>
        <item name="android:background">@drawable/ic_style_button_round_none_default</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="Style_Menu_Item.NonPress" parent="AppTheme.TextView_Title.Bold">
        <item name="android:layout_height">?actionBarSize</item>
        <item name="android:paddingLeft">@dimen/margin_x2</item>
        <item name="android:paddingRight">@dimen/margin_x2</item>
        <item name="android:paddingEnd">@dimen/margin_x2</item>
        <item name="android:paddingStart">@dimen/margin_x2</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
