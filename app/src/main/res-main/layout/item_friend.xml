<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_style_button_round_none_default"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="@dimen/margin">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/icon_size_x7"
        android:layout_height="@dimen/icon_size_x7"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_launcher" />

    <TextView
        style="@style/AppTheme.TextView_Title.Bold"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:gravity="center|start"
        android:padding="@dimen/margin"
        android:text="@string/all_app_name" />

    <Button
        android:id="@id/button"
        style="@style/AppTheme.TextView_Title.Bold.White"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/icon_size_x5"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:background="@drawable/ic_style_button_round_none_accent"
        android:text="Invite" />

</LinearLayout>