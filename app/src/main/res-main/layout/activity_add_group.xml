<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yosta.phuotngay.ui.OwnToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutBackground="@color/colorPrimary"
        app:layoutTitle="@string/str_create_group"
        app:layoutType="title_center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatImageView
            style="@style/AppTheme.IconClick"
            android:layout_width="@dimen/icon_size_x12"
            android:layout_height="@dimen/icon_size_x12"
            android:layout_gravity="center"
            android:padding="@dimen/margin_x2"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginStart="@dimen/margin">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="TÃªn group"
                android:inputType="text"
                android:maxLines="1"
                android:minLines="1" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view_add_friends"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />

            <include layout="@layout/layout_recycler_view" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <Button
        style="@style/AppTheme.TextView_Title.Bold.White"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_style_button_round_none_accent_dark"
        android:text="@string/str_create_group" />

</LinearLayout>