<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.yosta.phuotngay.ui.OwnToolBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutBackground="@color/colorPrimary"
        app:layoutTitle="Tạo group"
        app:layoutType="title_center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="horizontal"
        android:padding="@dimen/margin_x2">

        <android.support.v7.widget.AppCompatImageView
            style="@style/AppTheme.IconClick"
            android:layout_width="@dimen/icon_size_x12"
            android:layout_height="@dimen/icon_size_x12"
            android:layout_gravity="center"
            android:padding="@dimen/margin"
            android:scaleType="centerCrop"
            app:srcCompat="@mipmap/ic_launcher" />

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:layout_marginStart="@dimen/margin">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Tên group"
                android:inputType="text"
                android:maxLines="1"
                android:minLines="1" />

        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginRight="@dimen/margin">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Thêm thành viên"
                android:inputType="text"
                android:maxLines="1"
                android:minLines="1" />

        </android.support.design.widget.TextInputLayout>

    </RelativeLayout>

    <include layout="@layout/layout_recycler_view" />

</LinearLayout>