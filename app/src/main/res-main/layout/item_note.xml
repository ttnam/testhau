<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@id/container_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin"
    app:cardCornerRadius="@dimen/cardCornerRadius"
    app:cardElevation="@dimen/cardElevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin">

            <com.yosta.circleimageview.CircleImageView
                android:layout_width="@dimen/icon_size_x6"
                android:layout_height="@dimen/icon_size_x6"
                android:layout_gravity="center"
                android:src="@drawable/ic_avatar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:orientation="vertical"
                android:padding="@dimen/margin">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="nphau shared a comment"
                    android:textSize="@dimen/text_size_v1"
                    android:textStyle="bold" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="07:00 am MARCH 2, 2016"
                    android:textSize="@dimen/text_size_v1"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.TextView_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="@dimen/margin"
            android:paddingLeft="@dimen/margin"
            android:paddingRight="@dimen/margin"
            android:paddingStart="@dimen/margin"
            android:text="Nam du | Viet Nam"
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.TextView_Sub_Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:minLines="1"
            android:padding="@dimen/margin"
            android:text="Thời điểm đẹp nhất để du lịch đảo Nam Du là từ tháng 12 đến tháng 3, vào khoảng thời gian này biển khá êm và trong xanh, do vậy những bạn bị say sóng cũng sẽ giảm được nhiều khó chịu khi di chuyển bằng tàu."
            android:textStyle="bold" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_height"
            android:layout_margin="@dimen/margin"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_sample" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize"
            android:layout_margin="@dimen/margin"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_share" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                app:srcCompat="@drawable/ic_vector_facebook" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>
