<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:padding="@dimen/margin_x2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/margin">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/icon_size_x4"
            android:layout_height="@dimen/icon_size_x4"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_vector_star_gold" />

        <TextView
            style="@style/AppTheme.TextView_Title.Bold.ColorPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:gravity="center|start"
            android:padding="@dimen/margin"
            android:text="How others rate this trip"
            android:textSize="@dimen/text_size_v2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            style="@style/AppTheme.TextView_Title.Bold.White"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/Green"
            android:gravity="center|start"
            android:padding="@dimen/margin"
            android:text="500" />

        <TextView
            style="@style/AppTheme.TextView_Title.Italic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin"
            android:layout_marginStart="@dimen/margin"
            android:layout_weight="1"
            android:gravity="center|start"
            android:padding="@dimen/margin"
            android:text="19 reviews" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@id/layout_rating"
            style="@style/AppTheme.IconClick"
            android:layout_width="@dimen/icon_size_x3"
            android:layout_height="@dimen/icon_size_x3"
            android:layout_gravity="center"
            app:srcCompat="@drawable/ic_vector_next" />

    </LinearLayout>

</LinearLayout>