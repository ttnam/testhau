<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    android:orientation="vertical">

    <com.yosta.phuotngay.ui.OwnToolBar
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="top"
        app:layoutBackground="@android:color/transparent"
        app:layoutType="title_center" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_x2"
                    android:text="@string/setting_basic_settings" />

                <LinearLayout
                    android:id="@+id/layout_profile"
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_profile" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="View your profile" />

                </LinearLayout>

                <LinearLayout
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_works" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="How it works" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_x2"
                    android:text="Tell your friend about us"
                    android:textColor="@color/colorAccentDark" />

                <LinearLayout
                    android:id="@+id/layout_rating"
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_rate" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="Rate Us" />

                </LinearLayout>

                <LinearLayout
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_facebook" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="Share on Facebook" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_x2"
                    android:text="@string/setting_backup_restore" />

                <LinearLayout
                    android:id="@+id/layout_auto_sync"
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_vector_sync" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/AppTheme.TextView_Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/setting_auto_sync" />

                            <TextView
                                style="@style/AppTheme.TextView_Sub_Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/str_access_sync"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="@dimen/margin_x2"
                            android:layout_marginRight="@dimen/margin_x2"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <Switch
                                android:id="@+id/switch_sync"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:checked="true"
                                android:clickable="true"
                                android:enabled="true"
                                android:gravity="center" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_delete" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="Clear Search History" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:background="@android:color/white"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_x2"
                    android:text="@string/setting_basic_settings" />

                <LinearLayout
                    android:id="@+id/layout_change_language"
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_language" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:baselineAligned="false"
                        android:orientation="vertical">

                        <TextView
                            style="@style/AppTheme.TextView_Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_x2"
                            android:layout_marginStart="@dimen/margin_x2"
                            android:text="@string/setting_language" />

                        <TextView
                            android:id="@+id/txt_lang"
                            style="@style/AppTheme.TextView_Sub_Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="@dimen/margin_x2"
                            android:layout_marginStart="@dimen/margin_x2"
                            android:text="@string/str_action_change_language_title"
                            android:textStyle="italic" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_notify"
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_vector_notification" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_weight="3"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                style="@style/AppTheme.TextView_Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/setting_notification" />

                            <TextView
                                style="@style/AppTheme.TextView_Sub_Title"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:text="@string/str_access_sync"
                                android:textStyle="italic" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="@dimen/margin_x2"
                            android:layout_weight="3"
                            android:orientation="vertical">

                            <Switch
                                android:id="@+id/switch_notify"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:checked="true"
                                android:clickable="true"
                                android:enabled="true"
                                android:gravity="center" />

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_help" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="@string/setting_help" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_about"
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_launcher" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="@string/setting_about" />

                </LinearLayout>

                <LinearLayout
                    style="@style/Style_Menu_Item.Press"
                    android:layout_width="match_parent"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatImageView
                        style="@style/AppTheme.SettingMenuIcon"
                        android:layout_width="@dimen/icon_size_x3"
                        android:layout_height="@dimen/icon_size_x3"
                        android:layout_gravity="center_vertical"
                        app:srcCompat="@drawable/ic_vector_update" />

                    <TextView
                        style="@style/AppTheme.TextView_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/margin_x2"
                        android:layout_marginStart="@dimen/margin_x2"
                        android:text="Check For Updates" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>

