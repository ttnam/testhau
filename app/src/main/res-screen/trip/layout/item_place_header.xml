<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@android:color/black"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="matrix"
        app:srcCompat="@drawable/ic_sample" />

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:background="@android:color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/margin"
        android:orientation="horizontal"
        android:padding="@dimen/margin_x2">

        <com.yosta.circleimageview.CircleImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/ic_avatar" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.TextView_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:gravity="center|start"
            android:text="PHUC HENRY"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/margin_x3"
        android:orientation="vertical"
        android:padding="@dimen/margin_x2">

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.TextView_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:gravity="center|start"
            android:text="TRAVELS FEB 14 2016 11:30 PM"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.TextView_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/margin"
            android:gravity="center|start"
            android:text="A boutique getaway in Prince Edward County, Canada."
            android:textColor="@android:color/white"
            android:textSize="28sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_vector_comment" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.TextView_Title.Normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="1234"
                android:textColor="@android:color/white" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin_x2"
                android:layout_marginStart="@dimen/margin_x2"
                app:srcCompat="@drawable/ic_vector_heart" />

            <android.support.v7.widget.AppCompatTextView
                style="@style/AppTheme.TextView_Title.Normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:gravity="center|start"
                android:text="1234"
                android:textColor="@android:color/white" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>