<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CoreAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="CoreAppTheme.White" parent="CoreAppTheme">
        <item name="colorPrimary">#FFFFFF</item>
        <item name="android:textAllCaps">false</item>
        <item name="colorPrimaryDark">#BDBDBD</item>
    </style>

    <style name="CoreAppTheme.Fullscreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:typeface">serif</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
    </style>

    <style name="CoreAppTheme.IconClick" parent="CoreAppTheme">
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="CoreAppTheme.Dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/ic_style_dialog</item>
    </style>

    <!--Title-->
    <style name="CoreAppTheme.TextView_Title" parent="CoreAppTheme">
        <item name="android:textSize">@dimen/text_size_v1</item>
        <item name="android:textColor">@color/colorTextColorPrimary</item>
    </style>

    <style name="CoreAppTheme.TextView_Title.White" parent="CoreAppTheme.TextView_Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CoreAppTheme.TextView_Title.Bold" parent="CoreAppTheme.TextView_Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoreAppTheme.TextView_Title.Italic" parent="CoreAppTheme.TextView_Title">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CoreAppTheme.TextView_Title.Bold.White" parent="CoreAppTheme.TextView_Title.Bold">
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!--Sub title-->
    <style name="CoreAppTheme.TextView_Sub_Title" parent="CoreAppTheme">
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/colorTextColorSecondary</item>
    </style>

    <style name="CoreAppTheme.TextView_Sub_Title.Bold" parent="CoreAppTheme.TextView_Sub_Title">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CoreAppTheme.TextView_Sub_Title.Italic" parent="CoreAppTheme.TextView_Sub_Title">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CoreAppTheme.TextView_Sub_Title.White" parent="CoreAppTheme.TextView_Sub_Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CoreAppTheme.TextView_Sub_Title.Italic.White" parent="CoreAppTheme.TextView_Sub_Title.White">
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CoreAppTheme.AnimDialog.SlideUpDown" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_up</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_down</item>
    </style>

    <style name="CoreAppTheme.AnimDialog.SlideLeftRight" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_left</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_right</item>
    </style>

    <style name="CoreAppTheme.AnimDialog.SlideRightLeft" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_right</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_left</item>
    </style>

    <style name="CoreAppTheme.AnimDialog.SlideDownUp" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowEnterAnimation">@anim/anim_slide_in_down</item>
        <item name="android:windowExitAnimation">@anim/anim_slide_out_up</item>
    </style>

    <style name="CoreAppTheme.AnimDialog.Grow" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="@android:windowEnterAnimation">@anim/anim_grow_in</item>
        <item name="@android:windowExitAnimation">@anim/anim_grow_out</item>
    </style>

</resources>