<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ic_style_button_round_none_default"
    android:clickable="true"
    android:orientation="horizontal"
    android:padding="@dimen/margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin"
        android:layout_marginRight="@dimen/margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tV_hour"
            style="@style/AppTheme.TextView_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center|end"
            android:text="08:00" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/icon_size_x2"
            android:layout_height="@dimen/icon_size_x2"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/margin"
            android:layout_marginTop="@dimen/margin"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_style_circle_blue_none" />

        <View
            android:layout_width="1dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:background="@color/BlueButton" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_x2"
        android:layout_marginStart="@dimen/margin_x2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingTop="@dimen/margin">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_vector_alarm_clock" />

            <TextView
                android:id="@+id/tv_time"
                style="@style/AppTheme.TextView_Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center|start"
                android:paddingLeft="@dimen/margin"
                android:paddingStart="@dimen/margin"
                android:text="Ngày 22 tháng 11 năm 2016" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x3"
                android:layout_height="@dimen/icon_size_x3"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_vector_note" />

            <TextView
                android:id="@+id/txt_content"
                style="@style/AppTheme.TextView_Title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:ellipsize="end"
                android:gravity="center|start"
                android:maxLines="3"
                android:minLines="1"
                android:paddingLeft="@dimen/margin"
                android:paddingStart="@dimen/margin"
                android:text="Mình khởi hành vào lúc 6h sáng ngày 18/01, thời tiết rất đẹp, trời trong xanh và khá lạnh. Mình đi theo đường Long Bình từ bên trong Quận 9 đâm thẳng ra cầu Đồng Nai và đi theo đường Quốc lộ 51" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x6"
                android:layout_height="@dimen/icon_size_x6"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_avatar" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x6"
                android:layout_height="@dimen/icon_size_x6"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_sample" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="@dimen/icon_size_x6"
                android:layout_height="@dimen/icon_size_x6"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginStart="@dimen/margin"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_avatar" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>