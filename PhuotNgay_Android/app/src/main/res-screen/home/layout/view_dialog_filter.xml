<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/margin">

    <TextView
        style="@style/AppTheme.TextView_Sub_Title.ColorPrimary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:gravity="center"
        android:text="Filter"
        android:textSize="@dimen/text_size_v2" />

    <include layout="@layout/layout_separate_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            style="@style/AppTheme.TextView_Sub_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="Sắp xếp theo" />

        <com.yosta.materialspinner.MaterialSpinner
            android:id="@+id/spinner_sort_by"
            style="@style/AppTheme.TextView_Sub_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="@dimen/margin" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:weightSum="5">

        <TextView
            style="@style/AppTheme.TextView_Sub_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="Thời gian" />

        <com.yosta.materialspinner.MaterialSpinner
            android:id="@+id/spinner_during_time"
            style="@style/AppTheme.TextView_Sub_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2"
            android:gravity="center"
            android:padding="@dimen/margin" />

    </LinearLayout>

    <include layout="@layout/layout_separate_vertical" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:orientation="horizontal"
        android:weightSum="2">

        <TextView
            android:id="@+id/tv_cancel"
            style="@style/AppTheme.TextView_Sub_Title.ColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ic_style_button_round_none_default"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="Cancel"
            android:textSize="@dimen/text_size_v2" />

        <include layout="@layout/layout_separate_horizontal" />

        <TextView
            android:id="@+id/tv_apply"
            style="@style/AppTheme.TextView_Sub_Title.ColorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/ic_style_button_round_none_default"
            android:clickable="true"
            android:gravity="center"
            android:padding="@dimen/margin"
            android:text="Apply"
            android:textSize="@dimen/text_size_v2" />

    </LinearLayout>

</LinearLayout>

