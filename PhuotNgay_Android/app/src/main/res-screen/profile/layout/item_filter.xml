<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="filter"
            type="com.yosta.phuotngay.bindings.FilterViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_style_button_circle_corners_green_none"
        android:clickable="true"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin"
        android:paddingRight="@dimen/margin">

        <TextView
            style="@style/AppTheme.TextView_Sub_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:gravity="center"
            android:maxLines="1"
            android:minLines="1"
            android:text="@{filter.content}"
            android:textColor="@android:color/white" />

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="@dimen/icon_size_x2"
            android:layout_height="@dimen/icon_size_x2"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/margin"
            android:layout_marginRight="@dimen/margin"
            android:background="@android:color/transparent"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/ic_vector_close" />

    </LinearLayout>

</layout>