<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    android:orientation="vertical">

    <com.yosta.phuotngay.ui.customview.OwnToolBar
        android:id="@id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layoutType="title_left" />

    <include layout="@layout/layout_separate_vertical" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/margin_x7"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="@dimen/margin_x2">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/margin"
                android:background="@drawable/ic_style_button_round_none_default"
                android:clickable="true"
                android:padding="@dimen/margin_x2">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/image_avatar"
                    android:layout_width="@dimen/icon_size_x12"
                    android:layout_height="@dimen/icon_size_x12"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_avatar" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/icon_size_x3"
                    android:layout_height="@dimen/icon_size_x3"
                    android:layout_gravity="bottom|end"
                    app:srcCompat="@drawable/ic_vector_check" />
            </FrameLayout>

            <TextView
                android:id="@+id/tvUserName"
                style="@style/AppTheme.TextView_Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:padding="@dimen/margin_x2"
                android:text="Nguyễn Phúc Hậu"
                android:textSize="@dimen/text_size_v2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin"
                android:layout_marginTop="@dimen/margin"
                android:baselineAligned="true"
                android:orientation="horizontal"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_style_button_round_none_default"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/margin">

                    <TextView
                        style="@style/AppTheme.TextView_Title.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="3000" />

                    <TextView
                        style="@style/AppTheme.TextView_Sub_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Posts" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_style_button_round_none_default"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/margin">

                    <TextView
                        style="@style/AppTheme.TextView_Title.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="123" />

                    <TextView
                        style="@style/AppTheme.TextView_Sub_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Followers" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_style_button_round_none_default"
                    android:clickable="true"
                    android:orientation="vertical"
                    android:padding="@dimen/margin">

                    <TextView
                        style="@style/AppTheme.TextView_Title.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="210" />

                    <TextView
                        style="@style/AppTheme.TextView_Sub_Title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Followings" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/layout_separate_vertical" />

            <include layout="@layout/fragment_profile_base_info" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>
