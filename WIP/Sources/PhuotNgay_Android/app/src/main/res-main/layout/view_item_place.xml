<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="place"
            type="com.yosta.phuotngay.viewmodel.PlaceViewModel" />
    </data>

    <android.support.v7.widget.CardView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@id/container_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardCornerRadius">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height"
                android:adjustViewBounds="true">

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="matrix"
                    app:imageUrl="@{place.imageUrl}" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:alpha="0.3"
                    android:background="@android:color/black" />

                <android.support.v7.widget.AppCompatTextView
                    style="@style/AppTheme.TextView_Sub_Title.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/margin"
                    android:padding="@dimen/margin"
                    android:text="August, 2016"
                    android:textColor="@android:color/white"
                    app:font="@{`OpenSans-Bold`}" />

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_style_button_round_none_default"
                android:clickable="true"
                android:orientation="vertical">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/margin"
                    android:paddingRight="@dimen/margin"
                    android:paddingTop="@dimen/margin"
                    android:text="Nam du | Viet Nam"
                    android:textStyle="bold"
                    app:font="@{`OpenSans-Bold`}" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:padding="@dimen/margin">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/AppTheme.TextView_Sub_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="36 photos"
                        app:font="@{`Lato-Heavy`}" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/icon_size_x2"
                        android:layout_height="@dimen/icon_size_x2"
                        app:srcCompat="@drawable/ic_vector_arrow_down" />

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/appCompatTextView"
                        style="@style/AppTheme.TextView_Sub_Title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="6 videos"
                        app:font="@{`Lato-Heavy`}" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</layout>