<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:padding="@dimen/margin_x2">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/layout_linear">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_margin="@dimen/margin"
            android:orientation="vertical"
            android:padding="@dimen/margin">

            <android.support.v7.widget.AppCompatImageView
                android:id="@id/image"
                android:layout_width="@dimen/icon_size_x4"
                android:layout_height="@dimen/icon_size_x4"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/margin_x3"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_launcher_white" />

            <TextView
                android:id="@id/textView"
                style="@style/AppTheme.TextView_Title.Bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Explore the best places of the world's most vibrant cities"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@id/layout_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:padding="@dimen/margin"
        android:visibility="gone">

        <Button
            android:id="@id/button_ok"
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_style_button_round_corners_default"
            android:text="@string/str_login"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold" />

        <Button
            android:id="@id/button_no"
            style="?borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_x2"
            android:background="@drawable/ic_style_button_round_corners_blue_white"
            android:text="@string/str_submit"
            android:textColor="@android:color/white"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>
