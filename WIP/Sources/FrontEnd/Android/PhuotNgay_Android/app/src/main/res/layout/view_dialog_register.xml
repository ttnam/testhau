<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin"
    android:layout_marginTop="@dimen/margin"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/card_view_v2">

        <android.support.v7.widget.AppCompatImageView
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_launcher_orange" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/margin_x2"
        android:layout_marginLeft="@dimen/margin_x2"
        android:layout_marginRight="@dimen/margin_x2"
        android:layout_marginStart="@dimen/margin_x2"
        android:orientation="vertical"
        android:padding="@dimen/margin_x2">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_email"
                android:inputType="textEmailAddress"
                android:theme="@style/AppTheme.TextInputEditText"
                app:hintTextAppearance="@style/AppTheme.TextInputLayout" />

            <requestFocus />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/AppTheme.TextInputLayout">

            <android.support.design.widget.TextInputEditText
                android:id="@id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:theme="@style/AppTheme.TextInputEditText"
                app:hintTextAppearance="@style/AppTheme.TextInputLayout" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/AppTheme.TextInputLayout"
            app:passwordToggleEnabled="true"
            app:passwordToggleTintMode="src_atop">

            <android.support.design.widget.TextInputEditText
                android:id="@id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_password"
                android:inputType="textPassword"
                android:theme="@style/AppTheme.TextInputEditText"
                app:hintTextAppearance="@style/AppTheme.TextInputLayout" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            app:hintAnimationEnabled="true"
            app:hintTextAppearance="@style/AppTheme.TextInputLayout"
            app:passwordToggleEnabled="true"
            app:passwordToggleTintMode="src_atop">

            <android.support.design.widget.TextInputEditText
                android:id="@id/textView_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Repeat Password"
                android:inputType="textPassword"
                android:theme="@style/AppTheme.TextInputEditText"
                app:hintTextAppearance="@style/AppTheme.TextInputLayout" />
        </android.support.design.widget.TextInputLayout>

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.TextView_Title.Bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:clickable="true"
            android:paddingBottom="@dimen/margin"
            android:paddingTop="@dimen/margin"
            android:text="Registering means that you accept our Terms and Services."
            android:textColor="#dd4309" />

        <Button
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin"
            android:background="@drawable/ic_style_button_round_corners_orange_none"
            android:clickable="true"
            android:text="@string/str_submit"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>