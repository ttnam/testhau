<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWindowBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@id/image"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/image_height_v3"
                    android:scaleType="centerCrop"
                    app:srcCompat="@drawable/ic_sample" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|end"
                    android:background="@android:color/black"
                    android:orientation="horizontal">

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/AppTheme.TextView_Title.Bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:padding="@dimen/margin"
                        android:text="500K"
                        android:textColor="@android:color/white" />

                    <android.support.v7.widget.AppCompatImageView
                        android:layout_width="@dimen/icon_size"
                        android:layout_height="@dimen/icon_size"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/margin"
                        app:srcCompat="@drawable/ic_vector_favorite" />

                </LinearLayout>

            </FrameLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardCornerRadius"
                app:cardElevation="@dimen/cardElevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/white"
                    android:orientation="vertical"
                    android:padding="@dimen/margin_x2">

                    <android.support.v7.widget.AppCompatTextView
                        android:id="@id/textView_title"
                        style="@style/AppTheme.TextView_Title.Bold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center|start"
                        android:maxLines="3"
                        android:minLines="1"
                        android:padding="@dimen/margin"
                        android:text="Nam Du, thiên đường nơi cực Nam Tổ quốc"
                        android:textAllCaps="false"
                        android:textColor="@color/Green"
                        android:textSize="24sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="?actionBarSize"
                        android:baselineAligned="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ic_style_button_round_none_default"
                            android:clickable="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/icon_size_x2"
                                    android:layout_height="@dimen/icon_size_x2"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_vector_trend" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/margin"
                                    android:layout_marginRight="@dimen/margin"
                                    android:gravity="center"
                                    android:text="69" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/layout_comment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ic_style_button_round_none_default"
                            android:clickable="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/icon_size_x2"
                                    android:layout_height="@dimen/icon_size_x2"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_vector_comment" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/margin"
                                    android:layout_marginRight="@dimen/margin"
                                    android:gravity="center"
                                    android:text="100" />
                            </LinearLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@drawable/ic_style_button_round_none_default"
                            android:clickable="true">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <android.support.v7.widget.AppCompatImageView
                                    android:layout_width="@dimen/icon_size_x2"
                                    android:layout_height="@dimen/icon_size_x2"
                                    android:layout_gravity="center"
                                    app:srcCompat="@drawable/ic_vector_share" />

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center"
                                    android:layout_marginEnd="@dimen/margin"
                                    android:layout_marginRight="@dimen/margin"
                                    android:gravity="center"
                                    android:text="96" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <include layout="@layout/view_item_vertical_separate" />

                    <include layout="@layout/view_item_web_vew" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

            <include layout="@layout/view_recycler_view" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_x2" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_note"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:keepScreenOn="true"
                android:scrollbars="horizontal"
                app:layout_behavior="@string/appbar_scrolling_view_behavior" />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/image_height">

            </FrameLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.v4.widget.SwipeRefreshLayout>