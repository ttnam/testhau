<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWindowBackground"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.AppCompatImageView
                android:id="@id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_sample" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|end"
                android:background="@android:color/black"
                android:orientation="horizontal">

                <android.support.v7.widget.AppCompatTextView
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="@dimen/activity_padding_min"
                    android:text="500K"
                    android:textColor="@android:color/white" />

                <android.support.v7.widget.AppCompatImageView
                    android:layout_width="@dimen/icon_size_min_ex"
                    android:layout_height="@dimen/icon_size_min_ex"
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/activity_margin_min"
                    app:srcCompat="@drawable/ic_vector_favorite" />

            </LinearLayout>
        </FrameLayout>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/cardCornerRadius"
            app:cardElevation="@dimen/cardElevation">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="@dimen/activity_padding">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@id/textView_title"
                    style="@style/AppTheme.TextView_Title.Bold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|start"
                    android:maxLines="3"
                    android:minLines="1"
                    android:padding="@dimen/activity_padding_min"
                    android:text="Nam Du, thiên đường nơi cực Nam Tổ quốc"
                    android:textAllCaps="false"
                    android:textColor="@color/Green"
                    android:textSize="24sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:baselineAligned="true"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_style_button_round_none_default"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/icon_size_min_ex"
                                android:layout_height="@dimen/icon_size_min_ex"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_vector_trend" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/activity_margin_min"
                                android:layout_marginRight="@dimen/activity_margin_min"
                                android:gravity="center"
                                android:text="69" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:id="@+id/layout_comment"
                        android:background="@drawable/ic_style_button_round_none_default"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/icon_size_min_ex"
                                android:layout_height="@dimen/icon_size_min_ex"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_vector_comment" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/activity_margin_min"
                                android:layout_marginRight="@dimen/activity_margin_min"
                                android:gravity="center"
                                android:text="100" />
                        </LinearLayout>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/ic_style_button_round_none_default"
                        android:clickable="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerHorizontal="true"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/icon_size_min_ex"
                                android:layout_height="@dimen/icon_size_min_ex"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_vector_share" />

                            <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginEnd="@dimen/activity_margin_min"
                                android:layout_marginRight="@dimen/activity_margin_min"
                                android:gravity="center"
                                android:text="96" />
                        </LinearLayout>
                    </RelativeLayout>

                </LinearLayout>

                <include layout="@layout/view_item_vertical_separate" />

                <WebView
                    android:id="@id/web_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/activity_margin"
                    android:background="@android:color/transparent"
                    android:keepScreenOn="true" />
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <include layout="@layout/view_recycler_view" />

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>