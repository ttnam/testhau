<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorWindowBackground"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.AppCompatImageView
                android:id="@id/image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/app_bar_height"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_sample" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_margin_min"
                    android:layout_marginLeft="@dimen/activity_margin_min"
                    android:layout_marginRight="@dimen/activity_margin_min"
                    android:layout_marginTop="@dimen/image_height"
                    app:cardCornerRadius="@dimen/cardCornerRadius"
                    app:cardElevation="@dimen/cardElevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/white"
                        android:orientation="vertical">

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@id/textView_title"
                            style="@style/AppTheme.TextView_Title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/activity_padding_min"
                            android:text="Đảo Nam Du"
                            android:textAllCaps="true" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <android.support.v7.widget.AppCompatImageView
                                android:layout_width="@dimen/icon_size_min_ex_ex"
                                android:layout_height="@dimen/icon_size_min_ex_ex"
                                android:layout_gravity="center"
                                app:srcCompat="@drawable/ic_vector_location" />

                            <android.support.v7.widget.AppCompatTextView
                                android:id="@id/textView_description"
                                style="@style/AppTheme.TextView_Sub_Title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/activity_margin_min"
                                android:layout_marginStart="@dimen/activity_margin_min"
                                android:gravity="center"
                                android:text="Tỉnh Kiên Giang" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="?actionBarSize"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/activity_margin_min"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatTextView
                                    android:id="@id/textView"
                                    android:layout_width="@dimen/icon_size"
                                    android:layout_height="@dimen/icon_size"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_style_circle_blue_none"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:padding="@dimen/activity_padding_min"
                                    android:text="2K"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1">

                                <android.support.v7.widget.AppCompatTextView
                                    android:layout_width="@dimen/icon_size"
                                    android:layout_height="@dimen/icon_size"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:layout_gravity="center"
                                    android:background="@drawable/ic_style_circle_blue_none"
                                    android:gravity="center"
                                    android:padding="@dimen/activity_padding_min"
                                    android:text="9.5"
                                    android:textColor="@android:color/white"
                                    android:textStyle="bold" />
                            </RelativeLayout>
                        </LinearLayout>

                        <include layout="@layout/view_item_vertical_separate" />

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:gravity="center"
                            android:maxLines="10"
                            android:minLines="5"
                            android:padding="@dimen/activity_padding"
                            android:text="Thời điểm đẹp nhất để du lịch đảo Nam Du là từ tháng 12 đến tháng 3, vào khoảng thời gian này biển khá êm và trong xanh, do vậy những bạn bị say sóng cũng sẽ giảm được nhiều khó chịu khi di chuyển bằng tàu. Các vùng biển của Kiên Giang không chịu nhiều ảnh hưởng trực tiếp của bão, nhưng lượng mưa do bão gây ra chiếm tỉ trọng khá lớn, mùa mưa tại đây thường bắt đầu từ tháng 4 – 11 hàng năm." />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <include layout="@layout/view_recycler_view" />

            </LinearLayout>

        </FrameLayout>

    </android.support.v4.widget.NestedScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_gravity="bottom|center"
        android:background="@drawable/ic_style_rect_round_corners_blue_dark_none"
        android:clickable="true">

        <android.support.v7.widget.AppCompatTextView
            style="@style/AppTheme.TextView_Title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/app_name" />
    </RelativeLayout>

</FrameLayout>